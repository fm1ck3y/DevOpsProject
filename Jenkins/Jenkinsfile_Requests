pipeline {
    agent {
        label 'AWS-Agent'
    }
    parameters {
        string(name: 'count_requests', defaultValue: '10', description: 'Count requests for API:')
    }
    
    environment {
        PATH_TO_SCRIPT_NGINX_CONF = "/opt/ApiWithNginx/nginx/generate_data.py"
    }


    stages {
        stage('Create requests'){
            steps {
                sh "sudo python3 ${env.PATH_TO_SCRIPT_NGINX_CONF} ${params.count_requests}"
            }
        }
    }
}
